<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/width_conversation_message"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_small"
    android:paddingBottom="@dimen/margin_small"
    android:layout_gravity="start"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/recieved_text"
        android:layout_width="@dimen/message_text_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium"
        android:layout_gravity="center_vertical"
        android:textAlignment="viewStart"
        android:background="@drawable/recieved_background"
        tools:ignore="RtlCompat" />
    <TextView
        android:id="@+id/recieved_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_conversation_message"
        android:gravity="center"
        android:layout_marginStart="@dimen/margin_small"
        android:textAlignment="viewEnd"
        android:layout_gravity="center"
        tools:ignore="RtlCompat" />
</LinearLayout>