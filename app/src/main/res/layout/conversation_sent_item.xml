<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/width_conversation_message"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_small"
    android:paddingTop="@dimen/margin_small"
    android:layout_gravity="right"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    tools:ignore="RtlHardcoded">
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/sent_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_big"
        android:gravity="center"
        android:layout_marginStart="@dimen/margin_small"
        android:textAlignment="viewEnd"
        android:layout_gravity="center"
        tools:ignore="RtlCompat" />
    <TextView
        android:id="@+id/sender_text"
        android:layout_width="@dimen/message_text_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/margin_conversation_message"
        android:textAlignment="viewStart"
        android:background="@drawable/sent_background"
        tools:ignore="RtlCompat" />

</LinearLayout>